loop-display-size = 150px

.board
    text-align center
    margin 20px 0

    > div
        display inline-block
        margin 20px

loop-display(color)
    circle(loop-display-size, color)
    font-size 30px
    font-weight 100
    transition background .2s
    no-select()

    &:after
        content ''
        display inline-block

.loop
    loop-display(color-primary)
    position relative

    &.muted
        background rgba(color-primary, .2)

    .waveform
        absolute-cover()
        border-radius 100%
        overflow hidden

        > wave
            left -50%
            overflow visible !important

        wave, canvas
            min-height 100%

    .label
        position relative
        z-index 2

.recorder
    loop-display(rgba(color-primary, .5))

    &.recording
        background color-red

    &.preparing
        background color-yellow

.stats-bar
    debullet()
    text-align center
    margin-top 40px

    li
        display inline-block
        margin 0 20px

    input.signature
        width 7px

    input.tempo
        width 25px
        text-align center
html body
    margin 0
    min-height 100%

body
    background color-bg

header
    padding 20px 0

    a.logo
        circle(130px, color-white)
        border-radius 130px
        display block
        color color-bg
        font-size 35px
        margin auto
        border 2px solid color-bg
        box-shadow 0 0 0 2px color-white

.row
    grid-system()

.page-width
    page-width()

section
    display block
    padding 50px 0

.center
    text-align center

.left
    float left

.right
    float right
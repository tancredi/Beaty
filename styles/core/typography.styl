body
    font-family font-body
    color color-type-body
    font-weight 200

strong
    font-weight 400

h1, h2, h3, h4, h5, h6
    font-family font-heading
    font-weight normal
    color color-type-heading

    &.center
        text-align center

    &.ruled
        border-bottom 1px solid color-ruler
        padding-bottom 10px

h1
    font-size 64px

h2
    font-size 48px

h3
    font-size 38px
    font-weight bold

h4
    font-size 30px
    font-weight bold

h5
    font-size 20px
    font-weight bold

h6
    font-size 13px

a
    color color-type-link
    text-decoration none

    img
        border 0

h1, h2, h3, h4, h5, h6, p, ul, ol, input, button, textarea, code, hr, .box
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0

ul
    list-style square
    padding-left 20px

code
    display block
    padding 10px
    border-radius()
    background rgba(#000, .1)
    color darken(color-primary, 50%)
    font-size 15px

hr
    background color-ruler
    border 0
    height 1px
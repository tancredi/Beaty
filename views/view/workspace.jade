.actions

    .left
        a.button.circle.load(v-on='click: load()') L

    .right
        a.button.circle.save(v-on='click: save()') S

.board
    div(v-component='loop', v-repeat='recordings', v-if='!canceled' v-with='loop: $value, index: $index')
    div(v-component='recorder', v-with='model: recordings')

ul.stats-bar

    li
        strong Tempo: 
        input.tempo(v-model='tempo', type='text')
        |  bpm

    li
        strong Beat:
        |  {{ beatDisplay }}

    li
        strong Signature:
        input.signature(v-model='signature', type='text')
        |  /4

    li
        strong Metronome: 
        a(v-on='click:metronome = !metronome') {{ metronome ? 'On' : 'Off' }}